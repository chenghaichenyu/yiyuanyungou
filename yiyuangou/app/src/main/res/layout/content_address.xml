<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/act_address"
    tools:context="com.chenyu.yiyuangou.controller.activity.AddressAct">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_address_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/act_address_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_address_recyclerview"
        android:layout_margin="16dp"
        android:background="@drawable/btn_style_2"
        android:text="添加收货地址"
        android:textSize="@dimen/text_mid"
        android:textColor="@color/common_white"/>

</RelativeLayout>
