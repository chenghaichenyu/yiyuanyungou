<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/act_forgive_psw"
    tools:context="com.chenyu.yiyuangou.controller.activity.ForgivePswAct">

    <EditText
        android:id="@+id/act_forgive_psw_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/act_forgive_psw_edit_padding"
        android:layout_marginLeft="@dimen/act_forgive_psw_edit_margin_left_right"
        android:layout_marginRight="@dimen/act_forgive_psw_edit_margin_left_right"
        android:layout_marginTop="@dimen/act_forgive_psw_edit_margin_top_bottom"
        android:layout_marginBottom="@dimen/act_forgive_psw_edit_margin_top_bottom"
        android:background="@drawable/input_forgive_psw"
        android:hint="@string/act_forgive_psw_edit_hint"
        android:textColorHint="@color/gray_text"
        android:textSize="@dimen/text_small"
        android:textColor="@color/black_text"
        />

    <Button
        android:id="@+id/act_forgive_psw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/act_forgive_psw_btn_margin_left_right"
        android:layout_marginRight="@dimen/act_forgive_psw_btn_margin_left_right"
        android:layout_below="@id/act_forgive_psw_edit"
        android:background="@drawable/btn_style_2"
        android:textSize="@dimen/text_mid"
        android:textColor="@color/common_white"
        android:text="@string/act_forgive_psw_btn_text"/>

</RelativeLayout>
