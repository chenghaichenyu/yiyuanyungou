<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="none"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_layout"
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_layout">

            <RelativeLayout
                android:id="@+id/tool_bar_btn_locate"
                android:layout_width="@dimen/tb_latest_announcement_rl_width"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tb_latest_announcement_btn_locate_height"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/tb_latest_announcement_btn_locate_padding_left_and_right"
                    android:layout_marginRight="@dimen/tb_latest_announcement_btn_locate_padding_left_and_right"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tb_frg_latest_announcement_locate" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tool_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/frg_latest_announcement_title"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_toolbar_title" />

            <RelativeLayout
                android:id="@+id/tool_bar_btn_search"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/tb_latest_announcement_rl_all_sort_width"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/frg_latest_announcement_text_all_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/frg_latest_announcement_text_all_sort"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/common_orange"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/frg_latest_announcement_text_all_sort"
                    android:layout_marginLeft="@dimen/tb_latest_announcement_btn_all_sort_padding_left_and_right"
                    android:layout_marginRight="@dimen/tb_latest_announcement_btn_all_sort_padding_left_and_right"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:paddingBottom="@dimen/tb_latest_announcement_btn_all_sort_padding_bottom"
                    android:src="@drawable/tb_frg_latest_announcement_all_sort" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tb_latest_announcement_delive_height"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_divide_line" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>


